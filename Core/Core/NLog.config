<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >

  <variable name="log4j-layout" value="${date} [${threadid}] ${level} ${logger} [${ndc}] - ${message}${newline}" />

  <targets>
    <target name="console" type="Console" layout="${log4j-layout}"/>
    <target name="logfile" type="File" fileName="logs/cash.log" archiveEvery="Day" layout="${log4j-layout}"
            archiveFileName="logs/cash-{#}.log" archiveDateFormat="yyyyMMdd" archiveNumbering="Date"
            maxArchiveFiles="10"/>
  </targets>

  <rules>
    <logger name="Core.*" minlevel="Debug" writeTo="console" />
    <logger name="Core.*" minlevel="Debug" writeTo="logfile" />
  </rules>
</nlog>